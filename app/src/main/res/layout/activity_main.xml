<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.erwinfischer.hola2.MainActivity">


    <TextView
        android:id="@+id/TV_mostrarSaludo"
        android:layout_width="298dp"
        android:layout_height="32dp"
        android:scrollIndicators="bottom|right"
        android:visibility="visible"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="171dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp" />

    <Button
        android:id="@+id/BT_Limpiar"
        android:layout_width="113dp"
        android:layout_height="81dp"
        android:onClick="limpiarMensaje"
        android:text="Borrar Mensaje"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="44dp"
        android:layout_alignTop="@+id/BT_Saludar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:background="#1B5E91"/>

    <Button
        android:id="@+id/BT_Saludar"
        android:layout_width="107dp"
        android:layout_height="77dp"
        android:onClick="mostrarMensaje"
        android:text="Saludar al Mundo"
        android:visibility="visible"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="44dp"
        android:layout_marginTop="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/TV_mostrarSaludo" />

</RelativeLayout>

